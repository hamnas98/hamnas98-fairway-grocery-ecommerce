<!-- Forgot Password Modal -->
<div class="auth-modal modal" id="forgotPasswordModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered auth-dialog">
        <div class="modal-content auth-content">
            <div class="modal-body p-0">
                <div class="auth-message"></div>
                <button type="button" class="auth-close" data-bs-dismiss="modal">
                    <i class="uil uil-multiply"></i>
                </button>
                <div class="row m-0">
                    <!-- Email Input Fields -->
                    <div id="forgotFields" class="auth-form-side col-md-6">
                        <form id="forgotPasswordForm" class="auth-form p-4">
                            <h4 class="auth-title">Forgot Password</h4>
                            <div class="auth-group">
                                <input type="email" class="auth-control" name="email" placeholder="Email">
                            </div>
                            <button class="auth-btn hover-btn" type="submit">Send OTP</button>
                            <div class="auth-switch mt-3">
                                <p>Remember password? <a href="#" data-bs-toggle="modal" data-bs-target="#loginModal">Login</a></p>
                            </div>
                        </form>
                    </div>

                    <!-- OTP Fields -->
                    <div id="forgotOtpFields" class="auth-form-side col-md-6" style="display: none;">
                        <div class="auth-form p-4 text-center">
                            <h4 class="auth-title">Verify OTP</h4>
                            <p class="text-muted mb-4">Enter the OTP sent to your email</p>
                            <div class="otp-inputs">
                                <input type="text" maxlength="1" class="otp-input">
                                <input type="text" maxlength="1" class="otp-input">
                                <input type="text" maxlength="1" class="otp-input">
                                <input type="text" maxlength="1" class="otp-input">
                                <input type="text" maxlength="1" class="otp-input">
                                <input type="text" maxlength="1" class="otp-input">
                            </div>
                            <button onclick="verifyForgotOTP()" class="auth-btn hover-btn mt-4">Verify OTP</button>
                            <div class="mt-3">
                                <span id="forgotTimer">Resend OTP in <span id="forgotCountdown">30</span>s</span>
                                <a href="#" id="forgotResendBtn" style="display: none;">Resend OTP</a>
                            </div>
                        </div>
                    </div>

                    <!-- Reset Password Fields -->
                    <div id="resetFields" class="auth-form-side col-md-6" style="display: none;">
                        <form id="resetPasswordForm" class="auth-form p-4">
                            <h4 class="auth-title">Reset Password</h4>
                            <div class="auth-group">
                                <input type="password" class="auth-control" name="password" placeholder="New Password">
                                <i class="uil uil-eye password-toggle" onclick="togglePassword(this)"></i>
                            </div>
                            <div class="auth-group">
                                <input type="password" class="auth-control" name="confirmPassword" placeholder="Confirm Password">
                                <i class="uil uil-eye password-toggle" onclick="togglePassword(this)"></i>
                            </div>
                            <button class="auth-btn hover-btn" type="submit">Reset Password</button>
                        </form>
                    </div>

                    <!-- Branding Side -->
                    <div class="col-md-6 auth-brand-side">
                        <div class="auth-brand-content">
                            <img src="/images/logo.svg" alt="Fairway" class="mb-4">
                            <h2>Reset Password</h2>
                            <p>We'll help you get back into your account</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/user/js/common.js"></script>
<script src="/user/js/forgotPassword.js"></script>