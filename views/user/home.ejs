	<body>
		<!-- Header Start -->
		<%- include('../partials/user/header', { parentCategories: parentCategories }) %>

		
		<!-- Header End -->
	
		<!-- Body Start -->
		<div class="wrapper">
			<!-- Categories Start -->
			<div class="section145">
				<div class="container">
					<div class="row">
						<div class="col-md-12">
							<div class="main-title-tt">
								<div class="main-title-left">
									<span>Shop By</span>
									<h2>Categories</h2>
								</div>
							</div>
						</div>
						<div class="col-md-12">
							<div class="owl-carousel cate-slider owl-theme">
								<% parentCategories.forEach(category => { %>
									<div class="item">
										<a href="/category/<%= category._id %>" class="category-item">
											<div class="cate-img">
												<img src="<%= category.image %>" alt="<%= category.name %>">
											</div>
										</a>
									</div>
								<% }); %>
							</div>
						</div>
					</div>
				</div>
			</div>
			<!-- Categories End -->
			<!-- Categories End -->
		
			<!-- Vegetables and Fruits Products Start -->
			<div class="section145">
				<div class="container">
					<div class="row">
						<div class="col-md-12">
							<div class="main-title-tt">
								<div class="main-title-left">
									<span>For You</span>
									<h2>Fruits & Vegetables</h2>
								</div>
								<a href="/category/fruits-vegetables" class="see-more-btn">See All</a>
							</div>
						</div>
						<div class="col-md-12">
							<div class="owl-carousel featured-slider owl-theme">
								<% fruitsVegProducts.forEach(product => { %>
									<div class="item">
										<div class="product-item">
											<a href="/product/<%= product._id %>" class="product-img">
												<img src="<%= product.images[0] %>" alt="<%= product.name %>">
												<div class="product-absolute-options">
													<% if (product.discountPercentage > 0) { %>
														<span class="offer-badge-1"><%= product.discountPercentage %>% off</span>
													<% } %>
													<span class="like-icon" title="wishlist"></span>
												</div>
											</a>
											<div class="product-text-dt">
												<p>
													<% if (product.stock > 0) { %>
														Available<span>(In Stock)</span>
													<% } else if (product.soldOut) { %>
														<span>Sold Out</span>
													<% } else { %>
														<span>Out of Stock</span>
													<% } %>
												</p>
												<h4><%= product.name %></h4>
												<h4><%= product.quantity+ product.unit %></h4>
												<div class="product-price">
													<% if (product.discountPrice) { %>
														₹<%= product.discountPrice %> <span>₹<%= product.price %></span>
													<% } else { %>
														$<%= product.price %>
													<% } %>
												</div>
												<% if (product.stock > 0) { %>
													<div class="add-to-cart-wrapper">
														<button class="add-to-cart-btn" onclick="toggleQuantitySelector(this)">
															<i class="uil uil-shopping-cart-alt"></i> Add to Cart
														</button>
														<div class="quantity-selector" style="display: none;">
															<button class="qty-btn minus"><i class="uil uil-minus"></i></button>
															<span class="qty-value">1</span>
															<button class="qty-btn plus"><i class="uil uil-plus"></i></button>
															<span  onclick="addToCart('<%= product._id %>')"></span>
														</div>
													</div>
											
												<% } %>
											</div>
										</div>
									</div>
								<% }); %>
							</div>
						</div>
					</div>
				</div>
			</div>
			<!-- Category Products End -->
	
			<!-- Best value Products Start -->
			
			<% if(locals.bestvalueProducts && bestvalueProducts.length > 0) { %>
				<div class="section145">
					<div class="container">
						<div class="row">
							<div class="col-md-12">
								<div class="main-title-tt">
									<div class="main-title-left">
