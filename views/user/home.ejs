															</button>
															<div class="quantity-selector" style="display: none;">
																<button class="qty-btn minus"><i class="uil uil-minus"></i></button>
																<span class="qty-value">1</span>
																<button class="qty-btn plus"><i class="uil uil-plus"></i></button>
																<span  onclick="addToCart('<%= product._id %>')"></span>
															</div>
														</div>
												
													<% } %>
												</div>
											</div>
										</div>
									<% }); %>
								</div>
							</div>
						</div>
					</div>
				</div>
			<% } %>
		
			<!-- Featured Products End -->
	
			<!-- New Products Start -->
			<% if(locals.newProducts && newProducts.length > 0) { %>
				<div class="section145">
					<div class="container">
						<div class="row">
							<div class="col-md-12">
								<div class="main-title-tt">
									<div class="main-title-left">
										<span>Fresh Arrivals</span>
										<h2>New Products</h2>
									</div>
									<a href="/shop/new" class="see-more-btn">See All</a>
								</div>
							</div>
							<div class="col-md-12">
								<div class="owl-carousel new-slider owl-theme">
									<% newProducts.forEach(product => { %>
										<div class="item">
											<div class="product-item">
												<a href="/product/<%= product._id %>" class="product-img">
